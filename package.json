{
  "name": "docapture-hr-tools",
  "version": "1.0.0",
  "description": "AI-powered HR tools for resume parsing, job description analysis, and candidate matching",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun run --watch index.ts",
    "clear-cache": "bun run clearCache.ts --confirm",
    "cache-status": "bun run clearCache.ts",
    "test-extraction": "bun run testExtraction.ts",
    "check-extractions": "bun run checkExtractions.ts",
    "test-multiple-match": "bun run testMultipleMatch.ts",
    "test-single-pdf": "bun run testSinglePDF.ts",
    "test-multiple-logs": "bun run testMultipleWithLogs.ts",
    "test-urls": "bun run testMultipleWithUrls.ts",
    "test-mongo-nl": "bun run testMongoNL.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.0.0",
    "groq-sdk": "^0.5.0",
    "mongodb": "^6.20.0",
    "ollama": "^0.5.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.0.379",
    "redis": "^5.8.2",
    "unpdf": "^1.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "hr",
    "recruitment",
    "ai",
    "resume",
    "job-description",
    "matching"
  ],
  "author": "Docapture Team",
  "license": "MIT"
}
